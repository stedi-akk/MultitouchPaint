<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:seekBarStyle">@style/SeekBarStyle</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="BaseDialog" parent="android:Theme.Dialog">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:seekBarStyle">@style/SeekBarStyle</item>
        <item name="android:windowBackground">@drawable/base_dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeekBarStyle" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WorkPanelButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_selector</item>
    </style>

    <style name="FileWorkDialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_selector</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>