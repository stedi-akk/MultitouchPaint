<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/work_panel_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/work_panel_file_work"
            style="@style/WorkPanelButton"
            android:src="@drawable/ic_file_work" />

        <ImageView
            android:id="@+id/work_panel_pipette"
            style="@style/WorkPanelButton"
            android:src="@drawable/ic_pipette" />

        <FrameLayout
            android:id="@+id/work_panel_color"
            style="@style/WorkPanelButton">

            <com.github.danielnilsson9.colorpickerview.view.ColorPanelView
                android:id="@+id/work_panel_color_holder"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:borderColor="@color/dark_gray" />

        </FrameLayout>

        <TextView
            android:id="@+id/work_panel_thickness"
            style="@style/WorkPanelButton"
            android:gravity="center" />

        <ImageView
            android:id="@+id/work_panel_undo"
            style="@style/WorkPanelButton"
            android:src="@drawable/ic_undo" />

        <ImageView
            android:id="@+id/work_panel_exit"
            style="@style/WorkPanelButton"
            android:src="@drawable/ic_exit" />

    </LinearLayout>
</LinearLayout>